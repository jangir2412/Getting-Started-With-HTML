Q4.
function taxCalculator() {
  return function(income) {
    if (income <= 30000) {
      return income * 0.1; // 10%
    } else if (income <= 70000) {
      return income * 0.2; // 20%
    } else {
      return income * 0.3; // 30%
    }
  };
}

const calculateTax = taxCalculator();

console.log("Tax on 25000:", calculateTax(25000)); // 2500
console.log("Tax on 50000:", calculateTax(50000)); // 10000
console.log("Tax on 100000:", calculateTax(100000)); // 30000


